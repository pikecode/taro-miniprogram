.profile-page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f7fb;
  margin: 0;
  padding: 0;
}

.header-section {
  position: relative;
  width: 100%;
  height: 360rpx;
  overflow: hidden;
  margin: 0;
  padding: 0;
}

.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.header-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.35) 0%, rgba(0, 0, 0, 0.15) 60%, rgba(0, 0, 0, 0.35) 100%);
}

.user-info-overlay {
  position: relative;
  z-index: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-end;
  padding: 32rpx 32rpx 48rpx;
  color: #ffffff;
}

.user-card-overlay {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.avatar-overlay {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-icon {
  font-size: 32rpx;
  color: #ffffff;
}

.user-details {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.user-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #ffffff;
}

.user-role {
  font-size: 14rpx;
  color: rgba(255, 255, 255, 0.85);
}

.content-section {
  margin-top: -40rpx;
  padding: 48rpx 32rpx 32rpx;
  background: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  box-shadow: 0 -12rpx 32rpx rgba(15, 23, 42, 0.08);
  flex: 1;
}

.task-card {
  background: #f8fafc;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  border: 1rpx solid #e2e8f0;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.arrow {
  font-size: 24rpx;
  color: #9ca3af;
}

.task-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  gap: 16rpx;
}

.task-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 12rpx 8rpx;
}

.task-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.task-label {
  font-size: 20rpx;
  color: #6b7280;
  margin-bottom: 4rpx;
}

.task-count {
  font-size: 28rpx;
  font-weight: 600;
  color: #ef4444;
}

.quick-actions {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.action-item {
  background: #f3f4f6;
  border-radius: 12rpx;
  padding: 20rpx 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  border: 1rpx solid #e5e7eb;
  transition: all 0.3s ease;
}

.action-item:active {
  background: #e5e7eb;
  transform: scale(0.98);
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 20rpx;
  color: #374151;
  font-weight: 500;
}

.feature-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 12rpx;
  background: #fafbfc;
  border-radius: 12rpx;
  border: 1rpx solid #f0f1f3;
  transition: all 0.2s ease;
}

.feature-item:active {
  background: #f0f1f3;
}

.feature-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.feature-name {
  font-size: 20rpx;
  color: #374151;
  font-weight: 500;
}

.footer-promotion {
  text-align: center;
  padding: 32rpx 0;
}

.qrcode-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.qrcode-placeholder {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  letter-spacing: 8rpx;
  color: #d1d5db;
  font-family: monospace;
}

.promotion-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.promotion-subtitle {
  font-size: 20rpx;
  color: #9ca3af;
}
