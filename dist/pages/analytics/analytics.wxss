.analytics-page {
  min-height: 100vh;
  background: #f5f7fb;
  padding-bottom: 100rpx;
}

.card-container {
  padding: 16rpx 32rpx;
}

.card-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 20rpx;
}

.score-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 32rpx;
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.score-main {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.score-circle {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 3rpx solid rgba(255, 255, 255, 0.4);
  flex-shrink: 0;
}

.score-value {
  font-size: 48rpx;
  font-weight: 700;
  line-height: 1;
}

.score-grade {
  font-size: 20rpx;
  margin-top: 8rpx;
  opacity: 0.9;
}

.score-info {
  display: flex;
  flex-direction: column;
}

.score-title {
  font-size: 20rpx;
  margin-bottom: 8rpx;
  opacity: 0.95;
}

.score-subtitle {
  font-size: 24rpx;
  font-weight: 600;
}

.stat-card {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.06);
}

.stat-content {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.stat-item {
  text-align: center;
  padding: 12rpx;
  background: #f9fafb;
  border-radius: 8rpx;
}

.stat-label {
  display: block;
  font-size: 16rpx;
  color: #9ca3af;
  margin-bottom: 6rpx;
}

.stat-number {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.stat-unit {
  display: block;
  font-size: 14rpx;
  color: #9ca3af;
  margin-top: 2rpx;
}

.progress-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.progress-label {
  font-size: 16rpx;
  color: #6b7280;
  min-width: 50rpx;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background: #e5e7eb;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  transition: width 0.3s ease;
  border-radius: 4rpx;
}

.progress-percent {
  font-size: 16rpx;
  font-weight: 600;
  color: #1f2937;
  min-width: 50rpx;
  text-align: right;
}

.trend-card {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.06);
}

.trend-chart {
  display: flex;
  align-items: flex-end;
  justify-content: space-around;
  height: 180rpx;
  gap: 24rpx;
  padding: 24rpx 0;
}

.trend-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  gap: 12rpx;
}

.trend-bar-container {
  width: 100%;
  height: 160rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.trend-bar {
  width: 40rpx;
  border-radius: 6rpx 6rpx 0 0;
  transition: all 0.3s ease;
}

.trend-labels {
  text-align: center;
  width: 100%;
}

.trend-score {
  display: block;
  font-size: 18rpx;
  font-weight: 600;
  color: #1f2937;
}

.trend-month {
  display: block;
  font-size: 14rpx;
  color: #9ca3af;
  margin-top: 4rpx;
}

.rank-card {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.06);
}

.rank-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.rank-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 12rpx;
  background: #f9fafb;
  border-radius: 8rpx;
  border: 1rpx solid #f0f1f3;
}

.rank-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.rank-badge {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  font-size: 16rpx;
  flex-shrink: 0;
}

.rank-info {
  display: flex;
  flex-direction: column;
}

.dept-name {
  font-size: 18rpx;
  font-weight: 600;
  color: #1f2937;
}

.rank-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.dept-trend {
  font-size: 20rpx;
  font-weight: 700;
}

.score-badge {
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  color: #ffffff;
  font-weight: 600;
}

.badge-text {
  font-size: 16rpx;
}

.overview-card {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.06);
}

.overview-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.overview-item {
  padding: 20rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 12rpx;
  text-align: center;
}

.overview-label {
  display: block;
  font-size: 16rpx;
  color: #6b7280;
  margin-bottom: 12rpx;
}

.overview-value {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}
