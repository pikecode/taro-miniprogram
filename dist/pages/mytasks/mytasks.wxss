.mytasks-page {
  min-height: 100vh;
  background: #f5f7fb;
  padding-bottom: 100rpx;
}

.stats-header {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #ffffff;
  padding: 24rpx 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.06);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stats-label {
  font-size: 20rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.stats-count {
  font-size: 36rpx;
  font-weight: 600;
  color: #ef4444;
}

.stats-divider {
  width: 1rpx;
  height: 40rpx;
  background: #e5e7eb;
  margin: 0 16rpx;
}

.tabs-container {
  display: flex;
  background: #ffffff;
  border-bottom: 1rpx solid #e5e7eb;
  padding: 0 32rpx;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  padding: 16rpx 12rpx;
  text-align: center;
  font-size: 24rpx;
  color: #9ca3af;
  border-bottom: 3rpx solid transparent;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #1f2937;
  border-bottom-color: #ef4444;
  font-weight: 600;
}

.task-list {
  padding: 16rpx 32rpx;
  height: calc(100vh - 340rpx);
}

.task-item {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx 16rpx;
  margin-bottom: 16rpx;
  border: 1rpx solid #e5e7eb;
  transition: all 0.2s ease;
}

.task-item:active {
  box-shadow: 0 4rpx 12rpx rgba(15, 23, 42, 0.1);
  transform: translateY(-2rpx);
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.task-info {
  flex: 1;
  margin-right: 12rpx;
}

.task-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 6rpx;
  line-height: 1.4;
}

.task-dept {
  font-size: 18rpx;
  color: #9ca3af;
}

.task-badge {
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  background: #ef4444;
  white-space: nowrap;
}

.badge-text {
  font-size: 16rpx;
  color: #ffffff;
  font-weight: 500;
}

.task-meta {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.meta-date {
  font-size: 18rpx;
  color: #9ca3af;
}

.task-progress {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.progress-bar-bg {
  flex: 1;
  height: 6rpx;
  background: #e5e7eb;
  border-radius: 3rpx;
  overflow: hidden;
}

.progress-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #10b981, #059669);
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 18rpx;
  color: #10b981;
  font-weight: 600;
  min-width: 40rpx;
  text-align: right;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 32rpx;
  text-align: center;
}

.empty-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 24rpx;
  color: #9ca3af;
}
