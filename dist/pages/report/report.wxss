.report-page {
  min-height: 100vh;
  background: #f5f7fb;
  padding-bottom: 100rpx;
}

.form-container {
  padding: 24rpx 32rpx;
}

.form-section {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.06);
}

.section-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 20rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #f0f1f3;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 20rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 8rpx;
}

.required {
  color: #ef4444;
  margin-right: 4rpx;
}

.form-input,
.picker-input {
  width: 100%;
  padding: 12rpx 16rpx;
  background: #f9fafb;
  border: 1rpx solid #e5e7eb;
  border-radius: 8rpx;
  font-size: 18rpx;
  color: #1f2937;
  line-height: 1.5;
}

.form-input {
  height: auto;
}

.picker-input {
  display: flex;
  align-items: center;
  min-height: 44rpx;
}

.input-value {
  color: #1f2937;
}

.placeholder {
  color: #d1d5db;
}

.form-textarea {
  width: 100%;
  padding: 12rpx 16rpx;
  background: #f9fafb;
  border: 1rpx solid #e5e7eb;
  border-radius: 8rpx;
  font-size: 18rpx;
  color: #1f2937;
  line-height: 1.5;
  min-height: 120rpx;
  resize: vertical;
}

.form-actions {
  padding: 24rpx 0;
}

.button-group {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.btn {
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  border: none;
  cursor: pointer;
}

.btn:active {
  transform: scale(0.98);
}

.btn-primary {
  background: #ef4444;
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.3);
}

.btn-primary:active {
  background: #dc2626;
}

.btn-secondary {
  background: #e5e7eb;
  color: #374151;
  border: 1rpx solid #d1d5db;
}

.btn-secondary:active {
  background: #d1d5db;
}
